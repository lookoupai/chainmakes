# 数据库配置
DATABASE_URL=postgresql+asyncpg://admin:password123@localhost:5432/trading_bot
POSTGRES_DB=trading_bot
POSTGRES_USER=admin
POSTGRES_PASSWORD=password123

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# 安全密钥
SECRET_KEY=your-secret-key-change-in-production-min-32-characters
ENCRYPTION_KEY=your-encryption-key-change-in-production-fernet-key

# JWT配置
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 应用配置
ENVIRONMENT=development
DEBUG=True
API_VERSION=v1

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# 交易所API配置(可选,用于测试)
OKX_API_KEY=
