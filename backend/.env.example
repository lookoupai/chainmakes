# 应用配置
APP_NAME=ChainMakes交易机器人
APP_VERSION=1.0.0
API_V1_PREFIX=/api/v1
ENVIRONMENT=development

# 数据库配置 - SQLite (统一使用 data 目录)
DATABASE_URL=sqlite:///./data/chainmakes.db
DATABASE_URL_ASYNC=sqlite+aiosqlite:///./data/chainmakes.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis配置(可选 - 暂不启用)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# JWT安全配置
SECRET_KEY=your-secret-key-here-please-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 加密配置(用于加密API密钥)
# 使用以下命令生成: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-here-please-change-in-production

# CORS配置(允许前端访问)
CORS_ORIGINS=http://localhost:3333,http://localhost:3000,http://localhost:5173

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Celery配置(可选 - 暂不启用)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# API限流
RATE_LIMIT_PER_MINUTE=60

# OKX API 配置 (请替换为您的实际API密钥)
# 获取方法: https://www.okx.com/trade-demo (模拟盘) 或 https://www.okx.com/account/my-api (实盘)
OKX_IS_DEMO=True
OKX_API_KEY=your-okx-api-key-here
OKX_API_SECRET=your-okx-api-secret-here
OKX_PASSPHRASE=your-okx-passphrase-here
OKX_PROXY=  # 可选，格式: http://127.0.0.1:10808

# 其他交易所配置 (可选)
# BINANCE_API_KEY=your-binance-api-key-here
# BINANCE_API_SECRET=your-binance-api-secret-here
# BINANCE_TESTNET=True

# 交易安全配置
MAX_POSITION_SIZE=10000  # 最大持仓金额
STOP_LOSS_PERCENTAGE=5  # 止损百分比
DCA_MAX_TIMES=5  # DCA最大次数

# 监控配置 (可选)
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TELEGRAM_CHAT_ID=your-telegram-chat-id
# WEBHOOK_URL=your-webhook-url-here